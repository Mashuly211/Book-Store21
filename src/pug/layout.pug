
include mixins.pug

doctype html
html(class='page  no-js', lang='ru')

  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')

    block meta
      title Home

    block head
      link(rel='stylesheet', href='css/style.css')
      script.
        document.documentElement.className = document.documentElement.className.replace('no-js', 'js');

  body.page
    noscript У вас отключен JavaScript. Это пугает.

    .page__inner
      .page__content

        header.page-header
          .page-header__inner
            a.page-header__logo(href='/') Book Store
            p.page-header__open-time  с 9:00 до 19:00
            nav.nav.main-nav.page-header__nav
              //button.burger.main-nav__burger(aria-label='Показать меню') #[span]
              //Бургер добавить позже
              ul.nav__list
                li.list__item
                  a.list__item-link(href='/') Книги
                li.list__item.list__item--active
                  a.list__item-link(href='/recommendations.html') Рекомендации
                li.list__item
                  a.list__item-link(href='/contacts.html') Контакты
            .page-header__buttons
              button.social-btn(type='button')
                svg(width='16', height='16')
                  use(xlink:href='img/sprite.svg#fb')
              button.social-btn(type='button')
                svg(width='16', height='16')
                  use(xlink:href='img/sprite.svg#vk')

        block content
          p Cодержимое


      footer.page-footer
        .page-footer__inner
          a.logo(href='/') Book Store
          p.page-footer__open-time  с 9:00 до 19:00
          nav.nav.nav-footer
            ul.nav__list
              li.nav__item
                a(href='/') Книги
              li.nav__item.nav__item--active
                a(href='/recommendations.html') Рекомендации
              li.nav__item.nav__item--contacts
                a(href='/contacts.html') Контакты

              li.nav__item.nav__item--phone
                a(href='tel:+78005008020')
                  svg(width='24', height='24')
                  span.nav__phone-number +7 800 500-80-20

    block page-bottom
      script(src='js/vendors.min.js')
      script(src='js/script.min.js')
